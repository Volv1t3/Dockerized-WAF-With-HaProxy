# Environment Variables for AgriCommerce Frontend
# Copy this file to .env and fill in the actual values

# Database Configuration
# For development (SQLite): file:./prisma/dev.db
# For production (PostgreSQL): postgresql://user:password@host:port/database
DATABASE_URL="file:./prisma/dev.db"

# JWT Secret for Authentication
# Generate a secure random string for production
# Example: openssl rand -base64 32
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# Server Configuration
# Port for the application server
PORT=3000

# Environment Mode
# Options: development, production
NODE_ENV="development"

# Cookie Security (automatically set based on NODE_ENV)
# COOKIE_SECURE=false  # Set to true in production